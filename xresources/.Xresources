/** Font configuration **/
Xft.antialias:              true
Xft.hinting:                true
Xft.rgba:                   rgb
Xft.hintstyle:              hintfull

/** Rofi Configuration **/
rofi.modi:                  run,window,ssh
rofi.color-enabled:         true
rofi.terminal:              urxvtc
rofi.ssh-client:            ssh
rofi.run-shell-command:     urxvtc -e '{cmd}'
rofi.ssh-command:           urxvtc -e {ssh-client} {host}

! Theme settings
rofi.theme:                 /usr/share/rofi/themes/android_notification.rasi

/** Urxvt Configuration **/
! Cursor settings
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Font to use
URxvt.font:                 xft:Hack:size=12

! Show or hide scrollbar
URxvt.scrollBar:            false

! Scroll to buttom on keypress
URxvt*scrollTtyOutput:      true

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer:     true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress:    true

! Plugins
URxvt.perl-ext-common:      selection-to-clipboard,matcher,fullscreen,resize-font

! Clickable urls
URxvt.url-launcher:         /usr/bin/xdg-open
URxvt.matcher.button:       1

! Fullscreen toggle
URxvt.keysym.F11:           perl:fullscreen:switch


