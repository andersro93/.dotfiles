/** Color settings for Terminal **/
*.foreground: #F8F8F2
*.background: #282A36
*.color0:     #000000
*.color8:     #4D4D4D
*.color1:     #FF5555
*.color9:     #FF6E67
*.color2:     #50FA7B
*.color10:    #5AF78E
*.color3:     #F1FA8C
*.color11:    #F4F99D
*.color4:     #8c67bf
*.color12:    #CAA9FA
*.color5:     #FF79C6
*.color13:    #FF92D0
*.color6:     #8BE9FD
*.color14:    #9AEDFE
*.color7:     #BFBFBF
*.color15:    #E6E6E6


/** Font configuration **/
Xft.antialias:              true
Xft.hinting:                true
Xft.rgba:                   rgb
Xft.hintstyle:              hintfull

/** Rofi Configuration **/
rofi.modi:                  run,window,ssh,drun
rofi.color-enabled:         true
rofi.terminal:              alacritty
rofi.ssh-client:            ssh
rofi.run-shell-command:     alacritty -e '{cmd}'
rofi.ssh-command:           alacritty -e {ssh-client} {host}

! Theme settings
rofi.theme:                 /usr/share/rofi/themes/android_notification.rasi
rofi.show-icons:            true

/** Urxvt Configuration **/
! Cursor settings
URxvt.cursorBlink:          true
URxvt.cursorColor:          #657b83
URxvt.cursorUnderline:      false

! Font to use
URxvt.xftAntialias:         true
URxvt.font:                 xft:Inconsolata Nerd Font Mono:size=14

! Show or hide scrollbar
URxvt.scrollBar:            false

! Scroll to buttom on keypress
URxvt*scrollTtyOutput:      true

! scroll in relation to buffer (with mouse scroll or Shift+Page Up)
URxvt*scrollWithBuffer:     true

! scroll back to the bottom on keypress
URxvt*scrollTtyKeypress:    true

! Plugins
URxvt.perl-ext-common:      selection-to-clipboard,matcher

! Clickable urls
URxvt.url-launcher:         /usr/bin/xdg-open
URxvt.matcher.button:       1

! Keymap
!URxvt.keysym.Home:          \033[1~
!URxvt.keysym.End:           \033[4~
!URxvt.keysym.KP_Home:       \033[1~
!URxvt.keysym.KP_End:        \033[4~
